# Simple .htaccess for Laravel root directory

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect to public folder
    RewriteCond %{REQUEST_URI} !^/public/
    RewriteRule ^(.*)$ public/$1 [L]
</IfModule>

# Disable directory listing
Options -Indexes

# Protect .env file
<Files ".env">
    Order allow,deny
    Deny from all
</Files>
